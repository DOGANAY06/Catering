@model IEnumerable<Catering.Models.CateringDetail>

@{
    ViewData["Title"] = "CateringDetailim";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}

<h1>CateringDetailim</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cateringfirmabilgi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icerik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eklemetarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktif)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Silindi)
