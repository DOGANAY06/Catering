
@model Catering.Models.Sayfalar

@{
    ViewData["Title"] = "SayfaGetir";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}

<script src="//cdn.ckeditor.com/4.19.1/standard/ckeditor.js"></script>

<h1>SayfaGetir</h1>

<h4>Sayfayı Güncelle</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="SayfaGuncelle" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="SayfaId" />
            <div class="form-group">
                <label asp-for="Baslik" class="control-label"></label>
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icerik" class="control-label"></label>
                <textarea asp-for="Icerik" name="Icerik"></textarea>
                <script>
                    CKEDITOR.replace("Icerik")
                </script>
                <span asp-validation-for="Icerik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktif" class="control-label"></label>
                <select asp-for="Aktif" class="form-control">
                    <option value="True">
                        Evet
                    </option>
                    <option value="False">
                        Hayır
                    </option>
                </select>
                <span asp-validation-for="Aktif" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Sayfalar">Geri Dön</a>
</div>

